{
  "name": "fanhattan-v0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx scripts/validate-content.ts --mode warn && next dev",
    "build": "tsx scripts/validate-lore.ts && tsx scripts/validate-content.ts --mode error && next build",
    "start": "next start",
    "lint": "next lint",
    "validate": "tsx scripts/validate-content.ts --mode error",
    "validate:lore": "tsx scripts/validate-lore.ts",
    "validate:lore-strict": "tsx scripts/validate-lore.ts --strict",
    "canon:lock": "tsx scripts/update-tier1-lock.ts",
    "migrate:lore": "tsx scripts/migrate-lore-redesign.ts",
    "tts:build-narration": "tsx scripts/build-character-narration.ts",
    "tts:build-narration:force": "tsx scripts/build-character-narration.ts --force",
    "tts:synthesize": "python3 scripts/tts/synthesize_character_audio.py",
    "tts:synthesize:force": "python3 scripts/tts/synthesize_character_audio.py --force",
    "tts:generate": "npm run tts:build-narration && python3 scripts/tts/synthesize_character_audio.py",
    "tts:generate:force": "npm run tts:build-narration:force && python3 scripts/tts/synthesize_character_audio.py --force"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "@tailwindcss/typography": "^0.5.19",
    "gray-matter": "^4.0.3",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "styled-components": "^6.3.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.3.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.49",
    "strip-markdown": "^6.0.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
